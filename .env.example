# OpenClaw Dashboard Environment Variables

# Django
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=openclaw_dashboard
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# OpenClaw Container Configuration
OPENCLAW_DATA_PATH=/openclaw-data
OPENCLAW_IMAGE=openclaw:latest
OPENCLAW_PORT_RANGE_START=9000
OPENCLAW_PORT_RANGE_END=9999

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Slack OAuth (optional)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=http://localhost:8000/api/workspaces/channels/slack/callback/

# Google OAuth (for Gmail integration - Greenhouse verification codes)
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Use port 80 for Docker Compose (through nginx), port 8000 for local dev
GOOGLE_REDIRECT_URI=http://localhost/api/google/oauth/callback/

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=OpenClaw Dashboard
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
